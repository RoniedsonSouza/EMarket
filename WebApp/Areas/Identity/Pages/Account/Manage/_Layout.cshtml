@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}
<link href="/css/layoutIndentity.css" rel="stylesheet"/>
<main class="main-content mt-0">
    <section>
        <div class="page-header min-vh-75">
            <div class="container">
                <div class="row">
                    <div class="col-xl-7 col-lg-8 col-md-9 d-flex flex-column mx-auto">
                        <div class="row">
                            <div class="card-header pb-0 text-left bg-transparent mt-7">
                                <h3 class="font-weight-bolder text-info text-gradient">Gerenciar sua conta</h3>
                                <p class="mb-0">
                                    Altere as configurações da sua conta
                                </p>
                            </div>
                            <div class="card col-md-6 card-plain mt-5">
                                <partial name="_ManageNav" />
                            </div>
                            <div class="card col-md-6 card-plain mt-3">
                                <div class="">
                                    @RenderBody()
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3"></div>
                </div>
                <div class="oblique position-absolute top-0 h-100 d-md-block d-none me-n8">
                    <div class="oblique-image bg-cover position-absolute fixed-top ms-auto h-100 z-index-0 ms-n6" style="background-image:url('/img/curved-images/curved6.jpg')"></div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
